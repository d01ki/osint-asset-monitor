# Database Configuration
DB_USER=osint
DB_PASSWORD=osint_password_change_me
DB_NAME=osint_monitor
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://osint:osint_password_change_me@db:5432/osint_monitor

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External API Keys (Optional but recommended)
# Get your API keys from:
# Shodan: https://account.shodan.io/
# Censys: https://censys.io/account/api
# VirusTotal: https://www.virustotal.com/gui/my-apikey

SHODAN_API_KEY=
CENSYS_API_ID=
CENSYS_API_SECRET=
VIRUSTOTAL_API_KEY=

# Notification Settings
# Slack Webhook
SLACK_WEBHOOK_URL=

# Email Notification (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_TO=security-team@example.com

# Scan Configuration
# Scan frequency in seconds (default: 86400 = 24 hours)
SCAN_INTERVAL=86400

# Maximum concurrent scans
MAX_CONCURRENT_SCANS=5

# DNS Resolver
DNS_RESOLVER=8.8.8.8,8.8.4.4

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
